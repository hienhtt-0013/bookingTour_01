<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

	<bean id="carService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="app.service.impl.CarServiceImpl">
				<property name="carDAO" ref="carDAO" />
			</bean>
		</property>
	</bean>
	
	<bean id="userService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="app.service.impl.UserServiceImpl">
				<property name="userDAO" ref="userDAO" />
			</bean>
		</property>
	</bean>

	<bean id="roleService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="app.service.impl.RoleServiceImpl">
				<property name="roleDAO" ref="roleDAO" />

			</bean>
		</property>
	</bean>

	<bean id="toursService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="app.service.impl.ToursServiceImpl">
				<property name="toursDAO" ref="toursDAO" />

			</bean>
		</property>
	</bean>

</beans>